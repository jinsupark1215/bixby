action (explainOptimalRoute) {
  type(Search)
  description (Give User Optimal Route Choices)
  collect {
    input (directionRequested) {
      type (DirectionRequested)
      min (Optional) max (One)
    }
    input (stationRequested) {
      type (StationRequested)
      min (Optional) max (One)
    }
  }
  output (OptimalRouteResult){
    throws{
      error (NoResult){
        on-catch {
          halt {
            dialog {
              template-macro (no_result)
            }
          }
        }
      }
      unknown-error{
        on-catch {
          halt {
            dialog {
              template-macro (no_result)
            }
          }
        }
      }
    }
  }
}
